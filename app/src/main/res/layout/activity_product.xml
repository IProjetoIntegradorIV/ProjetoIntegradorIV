<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp">

    <TextView
        android:id="@+id/come_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:drawableStartCompat="@drawable/ic_voltar"
        app:drawableTint="@color/blue"
        />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="0dp"
        android:layout_gravity="center"
        android:src="@drawable/prato_de_comida"
        app:shapeAppearanceOverlay="@style/CircleImage"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/heart_icon"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginTop="-60dp"
        android:layout_marginEnd="16dp"
        android:layout_gravity="end"
        android:background="?attr/selectableItemBackground"
        android:src="@drawable/ic_heart_outline" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="start"
        android:text="@string/nome_do_produto"
        android:textColor="@color/blue"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/desc_prod"
        android:textColor="@color/gray"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/pre_o_r_40_00"
        android:textColor="@color/gray"
        android:textSize="22dp" />



    <ImageView
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginTop="-50dp"
        android:layout_marginStart="350dp"
        android:src="@drawable/ic_heart_outfilled2"
        android:background="?attr/selectableItemBackground" />

    <TextView
        android:id="@+id/evaluation"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginTop="-28dp"
        android:layout_marginStart="300dp"
        android:text="@string/nota"
        android:textColor="@color/gray"
        android:textSize="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="0dp"
        android:layout_marginTop="30dp"
        android:text="@string/underline"
        android:textColor="@color/gray"
        android:textSize="130sp" />



</LinearLayout>


