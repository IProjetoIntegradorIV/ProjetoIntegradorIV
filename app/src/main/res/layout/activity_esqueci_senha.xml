<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/come_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_voltar"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:drawableTint="@color/blue"/>

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/logo_sem_fundo"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/ic_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/esqueci_minha_senha"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:drawableStart="@drawable/ic_login"
        android:layout_marginStart="30dp"
        android:drawableTint="@color/yellow"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/informe_seu_e_mail_para_recupera_o_de_senha"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/blue"
        android:textSize="15sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:text="@string/email"
        android:textSize="17sp"
        android:textColor="@color/yellow"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/etEmailForgotPassword"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:hint="@string/digite_seu_e_mail"
        android:background="@drawable/borda"
        android:layout_marginTop="8dp"
        android:textSize="15sp"
        android:inputType="textEmailAddress"
        android:drawableStart="@drawable/ic_email"
        android:layout_gravity="center"
        android:textColorHint="@color/gray"
        android:textColor="@color/gray"
        android:paddingStart="15dp"
        android:paddingEnd="10dp"
        android:drawablePadding="10dp"
        android:drawableTint="@color/blue"
        />

    <Button
        android:id="@+id/btnSend"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/borda"
        android:backgroundTint="@color/yellow"
        android:text="@string/enviar"
        android:textColor="@color/blue"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="@string/nova_senha"
        android:textSize="17sp"
        android:textColor="@color/yellow"
        android:textStyle="bold"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/etNewPassword"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:hint="@string/digite_sua_nova_senha"
            android:textSize="15sp"
            android:background="@drawable/borda"
            android:inputType="textPassword"
            app:endIconMode="password_toggle"
            android:layout_gravity="center"
            android:drawableStart="@drawable/ic_cadeado"
            android:textColorHint="@color/gray"
            android:textColor="@color/gray"
            android:drawableTint="@color/blue"
            android:paddingLeft="15dp"
            android:paddingStart="15dp"
            android:drawablePadding="10dp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="@string/nova_senha"
        android:textSize="17sp"
        android:textColor="@color/yellow"
        android:textStyle="bold"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:hint="@string/confirme_sua_senha"
            android:textSize="15sp"
            android:background="@drawable/borda"
            android:inputType="textPassword"
            app:endIconMode="password_toggle"
            android:layout_gravity="center"
            android:drawableStart="@drawable/ic_cadeado"
            android:textColorHint="@color/gray"
            android:textColor="@color/gray"
            android:drawableTint="@color/blue"
            android:paddingLeft="15dp"
            android:paddingStart="15dp"
            android:drawablePadding="10dp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnChangePassword"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/alterar"
        android:textColor="@color/blue"
        android:background="@drawable/borda"
        android:backgroundTint="@color/yellow"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:textStyle="bold"/>
</LinearLayout>
