<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <ImageView
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:src="@drawable/logo_sem_fundo"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/realizar_login"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:hint="@string/email"
        android:background="@drawable/borda"
        android:layout_marginTop="70dp"
        android:layout_gravity="center"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:paddingLeft="15dp"
        />

    <EditText
        android:id="@+id/etSenha"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:hint="@string/senha"
        android:background="@drawable/borda"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:paddingLeft="15dp"
        />

    <TextView
        android:id="@+id/etEsqueci"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/esqueci_senha"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnLogar"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/logar"
        android:textColor="@color/black"
        android:background="@drawable/borda"
        android:backgroundTint="@color/corPrincipal"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        />

    <TextView
        android:id="@+id/etCadastro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/nao_possui_conta"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:layout_marginTop="10dp"/>
</LinearLayout>
