<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/seta_voltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:drawableStart="@drawable/ic_voltar"
            android:drawableTint="@color/blue" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/baseline_logout_24" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="118dp"
            android:layout_height="100dp"
            android:src="@drawable/perfil" />

        <ImageView
            android:id="@+id/img_pencil2"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/baseline_edit_24"
            android:layout_gravity="bottom"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome Nome Nome "
            android:textColor="@color/blue"
            android:textSize="25dp"
           />

        <ImageView
            android:id="@+id/img_pencil"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/baseline_edit_24"
            android:layout_marginStart="5dp"/>

    </LinearLayout>




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:text="@string/email"
        android:textSize="17sp"
        android:textColor="@color/yellow"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:background="@drawable/borda"
        android:layout_marginTop="8dp"
        android:textSize="15sp"
        android:drawableStart="@drawable/ic_email"
        android:layout_gravity="center"
        android:textColorHint="@color/gray"
        android:textColor="@color/gray"
        android:paddingStart="15dp"
        android:paddingEnd="10dp"
        android:drawablePadding="10dp"
        android:drawableTint="@color/blue"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="@string/senha_atual"
        android:textSize="17sp"
        android:textColor="@color/yellow"
        android:textStyle="bold"/>



        <TextView
            android:id="@+id/tvSenha"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:textSize="15sp"
            android:background="@drawable/borda"
            android:inputType="textPassword"
            app:endIconMode="password_toggle"
            android:layout_gravity="center"
            android:drawableStart="@drawable/ic_cadeado"
            android:textColorHint="@color/gray"
            android:textColor="@color/gray"
            android:drawableTint="@color/blue"
            android:paddingLeft="15dp"
            android:paddingStart="15dp"
            android:drawablePadding="10dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="@string/nova_senha"
        android:textSize="17sp"
        android:textColor="@color/yellow"
        android:textStyle="bold"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/etSenha"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:hint="@string/digite_sua_senha"
            android:textSize="15sp"
            android:background="@drawable/borda"
            android:inputType="textPassword"
            app:endIconMode="password_toggle"
            android:layout_gravity="center"
            android:drawableStart="@drawable/ic_cadeado"
            android:textColorHint="@color/gray"
            android:textColor="@color/gray"
            android:drawableTint="@color/blue"
            android:paddingLeft="15dp"
            android:paddingStart="15dp"
            android:drawablePadding="10dp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="@string/confirmar_senha"
        android:textSize="17sp"
        android:textColor="@color/yellow"
        android:textStyle="bold"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/etConfirmarSenha"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:hint="@string/confirme_sua_senha"
            android:textSize="15sp"
            android:background="@drawable/borda"
            android:inputType="textPassword"
            app:endIconMode="password_toggle"
            android:layout_gravity="center"
            android:drawableStart="@drawable/ic_cadeado"
            android:textColorHint="@color/gray"
            android:textColor="@color/gray"
            android:drawableTint="@color/blue"
            android:paddingLeft="15dp"
            android:paddingStart="15dp"
            android:drawablePadding="10dp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnAtualizar"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/atualizar"
        android:textColor="@color/blue"
        android:background="@drawable/borda"
        android:backgroundTint="@color/yellow"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textStyle="bold"/>

</LinearLayout>
